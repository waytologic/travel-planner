{
    "compilerOptions": {
        "target": "ES2023",
        "module": "CommonJS",
        "outDir": "./build",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,

    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
